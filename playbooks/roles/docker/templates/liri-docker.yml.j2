version: "2"
services:
  www:
    image: {{ nginx.docker_image }}
    ports:
      - "80:80"
      - "443:443"
    networks:
      - backend
    volumes:
      - "/etc/letsencrypt:/etc/letsencrypt:ro"
      - "{{ nginx.conf_path }}/nginx-vhosts.conf:/etc/nginx/conf.d/default.conf:ro"
      - "{{ nginx.conf_path }}/secure:/etc/nginx/secure:ro"
      - "{{ nginx.conf_path }}/snippets:/etc/nginx/snippets:ro"
      - "{{ nginx.html_path }}:/usr/share/nginx/html:ro"
      - "{{ nginx.logs_path }}:/var/log/nginx"
      - "/tmp:/tmp"
    depends_on:
      - www-go
      - buildbot-master
    restart: on-failure
  www-go:
    image: liri-docker-registry.bintray.io/library/website
    networks:
      - backend
    volumes:
      - "{{ www_go.config_file }}:/config.ini:ro"
    restart: on-failure
  buildbot-master:
    image: liridev/buildbot-master
    ports:
      - "8010"
      - "9989"
    networks:
      - backend
    volumes:
      - "{{ buildbot_master.config_file }}:/var/lib/buildbot/settings/config.json:ro"
      - "/var/run/docker.sock:/var/run/docker.sock"
      - "/srv/ci/buildbot:/var/lib/buildbot"
      - "/srv/ci/output:/output"
      - "/srv/www/repo.liri.io:/repo"
    environment:
      - "BUILDBOT_CONFIG_URL=https://github.com/lirios/buildbot-config/archive/master.tar.gz"
      - "BUILDBOT_CONFIG_DIR=liribotcfg"
    restart: on-failure
networks:
  backend:

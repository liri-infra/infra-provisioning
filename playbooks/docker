    - name: Restart nginx
      docker_container:
        name: www
        image: liri-docker-infra.bintray.io/library/nginx:latest
        state: started
        restart: yes
        ports:
          - "80:80"
          - "443:443"
        volumes:
          - "{{ nginx_conf_path }}/nginx-vhosts.conf:/etc/nginx/conf.d/default.conf:ro"
          - "{{ nginx_html_path }}:/usr/share/nginx/html:ro"
          - "{{ nginx_logs_path }}:/var/log/nginx/log"
 

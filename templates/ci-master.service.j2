[Unit]
Description=%i container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=on-failure
ExecStartPre=/usr/bin/docker pull {{ ci_master.docker_image }}
ExecStart=/usr/bin/docker run --rm --name %i -v {{ ci_master.config_file }}:/config.ini:ro -v {{ ci_master.data_path }}:/data -v {{ ci_master.output_path }}:/output {{ ci_master.docker_image }}
ExecStop=-/usr/bin/docker stop %i
ExecStopPost=-/usr/bin/docker rm %i

[Install]
WantedBy=multi-user.target
